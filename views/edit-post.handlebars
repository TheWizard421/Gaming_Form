<article>
  <a href="/profile"> &larr; Back to profile</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <h4>Title:</h4>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <h4>Body:</h4>
      <textarea name="post-body" type="text">{{post.post_body}}</textarea>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}}
        {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-link">Save post</button>
    <button type="button" class="button is-link">Delete post</button>
  </form>
</article>

