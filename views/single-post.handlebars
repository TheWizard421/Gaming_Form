<article class="post">
  <div class="title">
    {{post.title}}
  </div>

  <p>
    {{post.post_body}}
  </p>
</article>

<br />

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
  <div>
    <button type="submit">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
      <br />
    </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>