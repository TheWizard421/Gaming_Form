
<ul class="post-list">
  {{#each posts as |post|}}
  <div class="container"> 
    
      <li>
        <article class="post">
          <div>
            <a href="/post/{{id}}">{{post.title}}</a>
            <p>{{post.post_body}}</p>
          </div>
          <div class="meta">
            {{post.user.username}}
            on
            {{format_date created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
          </div>
        </article>
      </li>

    </div>
    <br />
  {{/each}}
</ul>